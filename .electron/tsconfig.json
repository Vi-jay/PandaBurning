{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNEXT",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "../packages/**/*.ts",
    "../packages/**/*.ts",
    "../typing/*.ts",
  ],
  "exclude": [
    "../packages/render-build/**/*.ts",
    "../packages/render/**/*.ts",
    "../node_modules",
  ]
}
