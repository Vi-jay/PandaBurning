{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNEXT",
      "dom"
    ],
    "types": [
      "vite/client",
      "@types/node"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "packages/render/src/*"
      ]
    }
  },
  "include": [
    "packages/render/**/src/*.ts",
    "packages/render/**/src/*.vue"
  ],
  "exclude": [
    "node_modules",
    "packages/render-build/**/*"
  ]
}
