{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ESNEXT",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "packages/render/src/*"
      ]
    }
  },
  "include": [
    "packages/**/*.ts",
    "typing/*.ts",
    "packages/render/src/**/*.d.ts",
    "packages/render/src/**/*.tsx",
    "packages/render/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "upload-temps",
    ".nuxt",
    "dist"
  ]
}
