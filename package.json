{
  "name": "evv-project",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "main": "packages/main/index.js",
  "scripts": {
    "postinstall": "patch-package",
    "dev": "cross-env NODE_ENV=development  tsc-watch --noClear -p .electron --onSuccess \"node .electron/restart.js\"",
    "build": "cross-env NODE_ENV=production tsc  -p .electron  &&   vite build  && electron-builder --dir",
    "buildprod": "cross-env NODE_ENV=production tsc &&   vite build  && electron-builder",
    "serve": "vite preview"
  },
  "bin": {
    "evv": "script/evv.js"
  },
  "dependencies": {
    "@types/puppeteer": "^5.4.4",
    "axios": "^0.24.0",
    "puppeteer": "^13.0.0",
    "puppeteer-extra": "^3.2.3",
    "puppeteer-extra-plugin-stealth": "^2.9.0",
    "qs": "^6.10.2",
    "robotjs": "^0.6.0",
    "vant": "3",
    "vue": "^3.0.5",
    "vue-router": "4"
  },
  "devDependencies": {
    "@babel/types": "^7.16.0",
    "@vitejs/plugin-vue": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.5",
    "cross-env": "^7.0.3",
    "electron": "^12.0.4",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^3.2.5",
    "patch-package": "^6.4.7",
    "sass": "latest",
    "tsc-watch": "^4.5.0",
    "typescript": "4.2.3",
    "vite": "2.5.10"
  },
  "build": {
    "productName": "工具包",
    "copyright": "By a lonely man",
    "asar": false,
    "extraResources": {
      "from": "./packages/extraResources/",
      "to": "extraResources"
    },
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "icon.png"
    }
  }
}
